<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
                                                   xmlns:app="http://schemas.android.com/apk/res-auto"
                                                   android:orientation="vertical"

                                                   android:paddingTop="10dp" android:layout_width="match_parent"
                                                   android:layout_height="match_parent">


    <TextView android:layout_width="wrap_content" android:layout_height="wrap_content"
              android:text="@string/logout"
              style="@style/AppTheme.Body1"
              android:id="@+id/logoutButton"
              app:layout_constraintTop_toTopOf="parent"
              app:layout_constraintEnd_toEndOf="@id/guideLineRight"

    />

    <ImageView android:layout_width="86dp"
               android:layout_height="86dp"
               android:src="@drawable/ic_profile_signup"
               android:id="@+id/profileImageView"
               app:layout_constraintTop_toBottomOf="@id/logoutButton"
               app:layout_constraintStart_toStartOf="@id/guideLineLeft"
    />

    <TextView android:layout_width="wrap_content"
              android:layout_height="wrap_content"
              app:layout_constraintTop_toBottomOf="@id/logoutButton"
              android:text="10 Posts"
              android:layout_marginStart="30dp"
              app:layout_constraintStart_toEndOf="@id/profileImageView"
              android:id="@+id/totalPostCountTextView"
    />

    <TextView
            android:layout_marginStart="30dp"
            android:layout_marginTop="8dp"
            android:id="@+id/editProfileButton"
            android:text="@string/editProfile"
            android:background="@drawable/edit_button_bg"
            android:padding="4dp"
            app:layout_constraintTop_toBottomOf="@id/totalPostCountTextView"
            app:layout_constraintStart_toEndOf="@id/profileImageView"
            app:layout_constraintEnd_toStartOf="@id/guideLineRight"
            android:gravity="center"
            app:layout_constrainedWidth="true"

            android:layout_width="0dp" android:layout_height="wrap_content"
    />


    <TextView android:layout_width="wrap_content" android:layout_height="wrap_content"
              android:text="Nitish Kumar"
              android:id="@+id/userNameTextView"
              android:layout_marginTop="8dp"
              app:layout_constraintTop_toBottomOf="@id/profileImageView"
              app:layout_constraintStart_toEndOf="@id/guideLineLeft"
              style="@style/AppTheme.Body1"
    />


    <TextView android:layout_width="0dp" android:layout_height="wrap_content"
              android:text="My name is Nitish Kumar These Day i am locking for the job opniity for the groom My Carrer To Gig rhe jon In the Company  "
              android:id="@+id/profileBioTextView"
              android:layout_marginTop="8dp"
              android:maxLines="3"
              android:ellipsize="end"
              app:layout_constraintEnd_toStartOf="@id/guideLineRight"

              app:layout_constraintTop_toBottomOf="@id/userNameTextView"
              app:layout_constraintStart_toEndOf="@id/guideLineLeft"
              style="@style/AppTheme.Body2"
    />

    <androidx.constraintlayout.widget.Guideline android:layout_width="wrap_content" android:layout_height="wrap_content"
                                                android:id="@+id/guideLineRight"
                                                android:orientation="vertical" app:layout_constraintGuide_end="30dp"/>
    <androidx.constraintlayout.widget.Guideline android:layout_width="wrap_content" android:layout_height="wrap_content"
                                                android:id="@+id/guideLineLeft" app:layout_constraintGuide_begin="30dp"
                                                android:orientation="vertical"/>
</androidx.constraintlayout.widget.ConstraintLayout>